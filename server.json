{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.withinfocus/tba",
  "title": "The Blue Alliance",
  "description": "The Blue Alliance MCP Server",
  "websiteUrl": "https://www.thebluealliance.com",
  "repository": {
    "url": "https://github.com/withinfocus/tba-mcp-server",
    "source": "github"
  },
  "version": "1.0.1",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@withinfocus/tba-mcp-server",
      "version": "1.0.1",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "The Blue Alliance API key",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "TBA_API_KEY"
        }
      ]
    }
  ]
}
